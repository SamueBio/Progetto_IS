<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/inviaRich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="INVIA RICHIESTA"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#AC0D0D"/>

    <TextView
        android:id="@+id/aAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text=""
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/nomeCognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="NOME e COGNOME"
        android:layout_marginTop="90dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextNomeCognome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:hint=""/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="EMAIL PERSONALE"
        android:layout_marginTop="190dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:hint=""
            android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/oggetto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="OGGETTO"
        android:layout_marginTop="290dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextOggetto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:hint=""
            android:maxLines="2"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/messaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="TESTO MESSAGGIO"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/editTextTestoMessaggio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:inputType="textMultiLine"
            android:maxLines="11"/>

        <Button
            android:id="@+id/buttonInviaRichiesta"
            android:layout_width="234dp"
            android:layout_height="62dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="INVIA RICHIESTA"
            android:textSize="20sp" />


    </LinearLayout>


</RelativeLayout>
