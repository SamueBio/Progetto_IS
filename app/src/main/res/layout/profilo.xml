<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/btnProfilo"
        android:layout_width="85dp"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="34dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/profilo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="PROFILO"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/house"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/house" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:text="NOME"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/nome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint=""
        android:inputType="none"
        android:editable="false"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"/>

    <TextView
        android:id="@+id/cognome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:text="COGNOME"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/cognome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:hint=""
        android:inputType="none"
        android:editable="false"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:text="EMAIL"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:hint=""
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="90dp"
        android:inputType="none"
        android:textSize="17sp"
        android:editable="false"/>



    <ImageButton
        android:id="@+id/cognomeMod"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="280dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/compose" />

    <ImageButton
        android:id="@+id/mailMod"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="390dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/compose" />


    <Button
        android:id="@+id/pwMod"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:layout_marginRight="20dp"
        android:text="CAMBIA PASSWORD"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/deleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="580dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#B50303"
        android:text="ELIMINA ACCOUNT"
        android:textSize="22sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/nomeMod"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="170dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/compose" />

