<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back"
        android:clickable="true"
        android:onClick="onBackImageClick"/>

    <ImageView
        android:id="@+id/home"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/puntodomanda" />

    <TextView
        android:id="@+id/faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="FAQ"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>

    <TextView
        android:id="@+id/credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:text="TravelTogether APP developed by:"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/stefano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="110dp"
        android:text="Stefano Forin"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/samuele"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"
        android:text="Samuele Biondo"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/davide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="35dp"
        android:text="Ferro Davide"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>

    <TextView
        android:id="@+id/matteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="Matteo Boscolo Pecchie Botti"
        android:textSize="14sp"
        android:textStyle="bold|italic"/>


    <!--
