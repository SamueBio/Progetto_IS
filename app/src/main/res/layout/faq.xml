<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <ImageButton
        android:id="@+id/back"
        android:layout_width="25dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="#CFD2F0"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/back"
        android:clickable="true"
        android:onClick="onBackImageClick"/>

    <ImageView
        android:id="@+id/home"
        android:layout_centerHorizontal="true"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/puntodomanda" />

    <TextView
        android:id="@+id/faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:text="FAQ"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>


    <!--
        TEXTVIEW DA CREARE PER OGNI FAQ
        faq1 già creata, copiare e incollare modificando:
        id: quindi sara faq2, faq3, e avanti
        layout_marginTop: aumentando quello della FAQ precedente di 40dp
    -->
    <TextView
        android:id="@+id/faq1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="130dp"
        android:text=" ➣  Visualizzazione profilo"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>

    <TextView
        android:id="@+id/faq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="190dp"
        android:text= " ➣  Effettuare una ricerca"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>

    <TextView
        android:id="@+id/faq3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="250dp"
        android:text= " ➣  Ricerca tramite servizi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>

    <TextView
        android:id="@+id/faq4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="310dp"
        android:text= " ➣  Aggiunta di un alloggio ai preferiti"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>

    <TextView
        android:id="@+id/faq5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:text= " ➣  Visualizzazione alloggi preferiti"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#005FBE"/>


</RelativeLayout>
